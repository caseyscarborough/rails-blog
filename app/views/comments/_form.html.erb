<%= form_for [@post, @post.comments.build], html: { class: 'form-horizontal' } do |f| %>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>

      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li class="error"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :author %>
    <%= f.text_field :author, class: 'input-large', placeholder: 'Author' %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email, class: 'input-large', placeholder: 'Email' %>
  </p>
  
  <p><%= f.label :content, "Comment" %>
  <%= f.text_area :content, class: 'input-large', placeholder: 'Comment' %></p>

  <%= f.submit class: 'btn btn-primary' %>

<% end %>
