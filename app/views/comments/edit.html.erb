<h1>Edit Comment</h1>

<%= form_for [@post, @comment], html: { class: 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :author, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :author %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :content, "Comment", class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :content %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= link_to 'Back', @post, class: 'btn' %>
